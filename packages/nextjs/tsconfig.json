{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
     "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["components/pages/*"],
      "@icons/*": ["components/icons/*"],
      "@tiptap/*": ["components/tiptap/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@public/*": ["public/*"],
      "@icons": ["components/icons/Icons.jsx"],
      "@tiptap": ["components/tiptap/*"],
     },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.jsx",
    "pages/_app.jsx",
    "pages/api/hello.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
