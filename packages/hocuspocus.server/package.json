{
  "name": "@docs.plus/hocuspocus",
  "version": "2.0.0-beta.103",
  "private": true,
  "description": "Hocuspocus is a suite of tools to bring collaboration to your application. It's based on Y.js (by Kevin Jahns), which is amazing to sync and merge changes from clients in real-time. But you can also use it to build offline-first apps, and sync changes later. We'll make sure to resolve conflicts and keep everything in sync, always.",
  "main": "src/index.ts",
  "scripts": {
    "prisma:init:migrations": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "dev:rest": "NODE_ENV=development bun --watch src/index.ts",
    "dev:ws": "NODE_ENV=development bun --watch src/hocuspocus.server.ts",
    "start:production:rest": "NODE_ENV=production bun scripts/start-production.ts",
    "start:production:ws": "NODE_ENV=production bun src/hocuspocus.server.ts",
    "fix:migration": "bun scripts/fix-migration.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "update:packages": "bunx npm-check-updates -u",
    "pm2:stage": "pm2 reload scripts/pm2.config.ts --env production --only stage_rest,stage_ws",
    "pm2:prod": "pm2 reload scripts/pm2.config.ts --env production --only prod_rest,prod_ws",
    "pm2:start": "pm2 start scripts/pm2.config.ts --env production",
    "pm2:stop": "pm2 stop scripts/pm2.config.ts",
    "pm2:delete": "pm2 delete scripts/pm2.config.ts",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "prisma:generate": "bunx prisma generate --schema=./prisma/schema.prisma",
    "healthcheck": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [],
  "author": "Hossein Marzban",
  "type": "module",
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "bun-types": "latest",
    "prisma": "^6.16.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@hocuspocus/extension-database": "^3.2.4",
    "@hocuspocus/extension-logger": "^3.2.4",
    "@hocuspocus/extension-redis": "^3.2.4",
    "@hocuspocus/extension-throttle": "^3.2.4",
    "@hocuspocus/server": "^3.2.4",
    "@hocuspocus/transformer": "^3.2.4",
    "@hono/zod-validator": "^0.4.1",
    "@prisma/adapter-pg": "^6.16.3",
    "@prisma/client": "^6.16.3",
    "@supabase/supabase-js": "^2.58.0",
    "@tiptap/core": "^3.6.2",
    "@tiptap/extension-document": "^3.6.2",
    "@tiptap/extension-paragraph": "^3.6.2",
    "@tiptap/extension-text": "^3.6.2",
    "@tiptap/html": "^3.6.2",
    "@tiptap/pm": "^3.6.2",
    "bullmq": "^5.28.2",
    "chalk": "^5.6.2",
    "dotenv-flow": "^4.1.0",
    "elastic-apm-node": "^4.14.0",
    "hono": "^4.6.14",
    "ioredis": "^5.4.2",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "mime": "^4.1.0",
    "pm2": "^6.0.13",
    "short-unique-id": "^5.3.2",
    "slugify": "^1.6.6",
    "zod": "^3.24.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
