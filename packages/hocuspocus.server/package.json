{
  "name": "@docs.plus/hocuspocus",
  "version": "2.0.0-beta.103",
  "private": true,
  "description": "Hocuspocus is a suite of tools to bring collaboration to your application. It's based on Y.js (by Kevin Jahns), which is amazing to sync and merge changes from clients in real-time. But you can also use it to build offline-first apps, and sync changes later. We'll make sure to resolve conflicts and keep everything in sync, always.",
  "main": "index.js",
  "scripts": {
    "prisma:init:migrations": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "dev:pg": "NODE_ENV=development nodemon index.js",
    "dev:ws": "NODE_ENV=development nodemon -r dotenv/config hocuspocus.server.js",
    "start:production:rest": "NODE_ENV=production bun start-production.js",
    "start:production:ws": "NODE_ENV=production bun -r dotenv/config hocuspocus.server.js",
    "fix:migration": "bun fix-migration.js",
    "lint:fix": "standard *.mjs *.js --fix | snazzy",
    "update:packages": "npx npm-check-updates -u",
    "pm2:stage": "pm2 reload pm2.config.cjs --env production --only stage_rest,stage_ws",
    "pm2:prod": "pm2 reload pm2.config.cjs --env production --only prod_rest,prod_ws",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "healthcheck": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [],
  "author": "Hossein Marzban",
  "type": "module",
  "devDependencies": {
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@hocuspocus/extension-database": "^3.1.12",
    "@hocuspocus/extension-logger": "^3.1.12",
    "@hocuspocus/extension-redis": "^3.1.12",
    "@hocuspocus/extension-throttle": "^3.1.12",
    "@hocuspocus/server": "^3.1.12",
    "@hocuspocus/transformer": "^2.15.3",
    "@prisma/adapter-pg": "^6.11.1",
    "@prisma/client": "^6.11.1",
    "@supabase/supabase-js": "^2.50.4",
    "@tiptap/extension-document": "^2.25.0",
    "@tiptap/extension-paragraph": "^2.25.0",
    "@tiptap/extension-text": "^2.25.0",
    "@tiptap/html": "^2.25.0",
    "ajv": "^6.12.5",
    "body-parser": "^2.2.0",
    "bull": "^4.16.5",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dotenv-flow": "^4.1.0",
    "elastic-apm-node": "^4.13.0",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "express-rate-limit": "^7.5.1",
    "express-ws": "^5.0.2",
    "helmet": "^8.1.0",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "mime": "^4.0.7",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "pm2": "^6.0.8",
    "redis": "^5.6.0",
    "short-unique-id": "^5.3.2",
    "slugify": "^1.6.6",
    "uuid": "^11.1.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}
