{
  "name": "@docs.plus/hocuspocus",
  "version": "2.0.0-beta.103",
  "private": true,
  "description": "Hocuspocus is a suite of tools to bring collaboration to your application. It’s based on Y.js (by Kevin Jahns), which is amazing to sync and merge changes from clients in real-time. But you can also use it to build offline-first apps, and sync changes later. We’ll make sure to resolve conflicts and keep everything in sync, always.",
  "main": "index.js",
  "scripts": {
    "prisma:init:migrations": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "dev:pg": "NODE_ENV=development nodemon index.js",
    "dev:ws": "NODE_ENV=development nodemon -r dotenv/config hocuspocus.server.js",
    "start:production:rest": "NODE_ENV=production npx prisma migrate deploy && node index.js",
    "start:production:ws": "NODE_ENV=production node -r dotenv/config hocuspocus.server.js",
    "lint:fix": "standard *.mjs *.js --fix | snazzy",
    "update:packages": "ncu -u",
    "pm2:stage": "pm2 reload pm2.config.cjs --env production --only stage_rest,stage_ws",
    "pm2:prod": "pm2 reload pm2.config.cjs --env production --only prod_rest,prod_ws"
  },
  "keywords": [],
  "author": "Hossein Marzban",
  "type": "module",
  "devDependencies": {
    "prisma": "5.13.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.569.0",
    "@hocuspocus/extension-database": "^2.12.2",
    "@hocuspocus/extension-logger": "^2.12.2",
    "@hocuspocus/extension-redis": "^2.12.2",
    "@hocuspocus/extension-throttle": "^2.12.2",
    "@hocuspocus/server": "^2.12.2",
    "@hocuspocus/transformer": "^2.12.2",
    "@prisma/client": "5.13.0",
    "@supabase/supabase-js": "^2.43.1",
    "@tiptap/extension-document": "^2.3.1",
    "@tiptap/extension-paragraph": "^2.3.1",
    "@tiptap/extension-text": "^2.3.1",
    "@tiptap/html": "^2.3.1",
    "ajv": "^6.12.5",
    "body-parser": "^1.20.2",
    "bull": "^4.12.2",
    "chalk": "^5.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "dotenv-flow": "^4.1.0",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "express-ws": "^5.0.2",
    "helmet": "^7.1.0",
    "jwt-decode": "^4.0.0",
    "lodash": "^4.17.21",
    "mime": "^4.0.3",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "pm2": "^5.3.1",
    "short-unique-id": "^5.2.0",
    "slugify": "^1.6.6",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  }
}
