{
  "name": "@docs.plus/hocuspocus",
  "version": "2.0.0-beta.103",
  "private": true,
  "description": "Hocuspocus is a suite of tools to bring collaboration to your application. It's based on Y.js (by Kevin Jahns), which is amazing to sync and merge changes from clients in real-time. But you can also use it to build offline-first apps, and sync changes later. We'll make sure to resolve conflicts and keep everything in sync, always.",
  "main": "src/index.ts",
  "scripts": {
    "prisma:init:migrations": "prisma migrate dev --name init",
    "prisma:migrate:dev": "prisma migrate dev",
    "dev:rest": "NODE_ENV=development bun --env-file ../../.env.local --watch src/index.ts",
    "dev:hocuspocus.server": "NODE_ENV=development bun --env-file ../../.env.local --watch src/hocuspocus.server.ts",
    "dev:hocuspocus.worker": "NODE_ENV=development bun --env-file ../../.env.local --watch src/hocuspocus.worker.ts",
    "start:rest": "NODE_ENV=production bun scripts/start-production.ts",
    "start:hocuspocus.server": "NODE_ENV=production bun src/hocuspocus.server.ts",
    "start:hocuspocus.worker": "NODE_ENV=production bun src/hocuspocus.worker.ts",
    "fix:migration": "bun scripts/fix-migration.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "update:packages": "bunx npm-check-updates -u",
    "prisma:generate": "bunx prisma generate --schema=./prisma/schema.prisma"
  },
  "keywords": [],
  "author": "Hossein Marzban",
  "type": "module",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.15.6",
    "@types/web-push": "^3.6.4",
    "bun-types": "latest",
    "prisma": "^6.19.0"
  },
  "dependencies": {
    "@hocuspocus/extension-database": "^3.4.0",
    "@hocuspocus/extension-logger": "^3.4.0",
    "@hocuspocus/extension-redis": "^3.4.0",
    "@hocuspocus/extension-throttle": "^3.4.0",
    "@hocuspocus/server": "^3.4.0",
    "@hocuspocus/transformer": "^3.4.0",
    "@hono/zod-validator": "^0.7.4",
    "@prisma/adapter-pg": "^6.19.0",
    "@prisma/client": "^6.19.0",
    "@supabase/supabase-js": "^2.90.1",
    "@tiptap/core": "^3.10.7",
    "@tiptap/extension-document": "^3.10.7",
    "@tiptap/extension-paragraph": "^3.10.7",
    "@tiptap/extension-text": "^3.10.7",
    "@tiptap/html": "^3.10.7",
    "@tiptap/pm": "^3.10.7",
    "bullmq": "^5.63.2",
    "hono": "^4.10.6",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mime": "^4.1.0",
    "nodemailer": "^6.9.15",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.2",
    "rate-limiter-flexible": "^8.2.1",
    "short-unique-id": "^5.3.2",
    "slugify": "^1.6.6",
    "yjs": "^13.6.27",
    "web-push": "^3.6.7",
    "zod": "^4.1.12"
  }
}
