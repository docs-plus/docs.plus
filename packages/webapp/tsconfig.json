{
  "compilerOptions": {
    "target": "ES2019",
    "baseUrl": ".",
      "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["components/pages/*"],
      "@icons/*": ["components/icons/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@public/*": ["public/*"],
      "@icons": ["components/icons/Icons.jsx"],
      "@tiptapEditor": ["components/tiptap/*"],
      "@pages": ["components/pages/*"],
      "@stores": ["stores/index.ts"],
      "@types": ["types/supabase.ts"],
      "@api": ["api/index.ts"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "maxNodeModuleJsDepth": 10,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.jsx",
    "pages/_app.tsx",
    "pages/api/hello.js",
    "middleware.js"
  ],
  "exclude": ["node_modules"]
}
