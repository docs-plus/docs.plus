{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "maxNodeModuleJsDepth": 10,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["components/pages/*"],
      "@icons/*": ["components/icons/*"],
      "@hooks/*": ["hooks/*"],
      "@context/*": ["context/*"],
      "@public/*": ["public/*"],
      "@icons": ["components/icons/Icons.jsx"],
      "@tiptapEditor": ["components/tiptap/*"],
      "@pages": ["components/pages/*"],
      "@stores": ["stores/index.ts"],
      "@types": ["types/index.ts"],
      "@api": ["api/index.ts"],
      "@toast": ["components/toast/index.ts"],
      "@db/*": ["db/*"],
      "@services/*": ["services/*"],
      "@config": ["config/index.ts"],
      "@layouts": ["layouts/index.ts"],
      "@helpers": ["Helpers/index.ts"]
    },

  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.tsx",
    "pages/_app.tsx",
    "pages/api/hello.js",
    "middleware.js"
  ],
  "exclude": ["node_modules"]
}
